LABEL_STUDIO_API_KEY=d0a9e147eb4dfd600030e6eca8382d0623a38a43

# YOLO ML Backend 基础配置
LOG_LEVEL=INFO

# ===================================
# 增强功能配置
# ===================================

# 置信度显示设置
MODEL_SHOW_CONFIDENCE=true              # 是否在bbox上显示置信度
MODEL_SCORE_THRESHOLD=0.3               # 显示预测的最低置信度阈值（0.3=30%）
MODEL_CONF_THRESHOLD=0.25               # YOLO内部置信度阈值

# 微调功能设置
MODEL_ENABLE_FINETUNE=true              # 是否启用自动微调
MODEL_MIN_ANNOTATIONS=10                # 开始微调前的最少标注数量
MODEL_RETRAIN_INTERVAL=5                # 重新训练的间隔（每N个新标注）
MODEL_FINETUNE_EPOCHS=20                # 微调训练轮数
MODEL_FINETUNE_BATCH=8                  # 批次大小
MODEL_FINETUNE_LR=0.001                 # 学习率
MODEL_FINETUNE_PATIENCE=5               # 早停耐心值

# 不确定性采样设置
MODEL_PRIORITIZE_UNCERTAIN=true         # 是否优先显示低置信度样本
UNCERTAINTY_THRESHOLD=0.5               # 不确定性阈值（低于此值的样本被认为是不确定的）
MIN_CONFIDENCE_FOR_TRAINING=0.3         # 用于训练的最低置信度阈值

# ===================================
# 高级配置（可选）
# ===================================

# GPU设置（如果有GPU）
# NVIDIA_VISIBLE_DEVICES=0              # 指定GPU设备
# CUDA_VISIBLE_DEVICES=0                # 备用GPU设置

# 缓存设置
CACHE_TYPE=sqlite                       # 缓存类型：sqlite, redis, memory
CACHE_MAX_SIZE=1000                     # 最大缓存条目数

# 性能优化
WORKERS=1                               # 工作进程数
THREADS=4                               # 每个工作进程的线程数
MAX_BATCH_SIZE=32                       # 最大批处理大小

# 模型设置
DEFAULT_MODEL_PATH=best.pt              # 默认模型文件名
MODEL_MAX_DET=100                       # 每张图片最多检测数量
MODEL_IOU_THRESHOLD=0.5                 # NMS的IOU阈值

# ===================================
# 开发调试（生产环境请设为false）
# ===================================

DEBUG_MODE=false                        # 调试模式
SAVE_PREDICTIONS=false                  # 是否保存预测结果
SAVE_TRAINING_LOGS=true                 # 是否保存训练日志